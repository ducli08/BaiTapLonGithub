<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hàng Chất Giá Thật</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="icon" href="~/HinhanhSP/Bo-Nhl-San-Jose-Sharks.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using Ictshop.Models


    <style type="text/css">
        body {
            background-color: #F0F0F0;
        }

        .navbar-inverse {
            background-color: #ffb833;
            border-color: #39B54A;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }



        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: black;
            font-size: medium;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: white;
            }

        .navbar-brand {
            color: cadetblue;
        }

        .container {
            margin-top: 15px;
        }

        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: white;
        }
    </style>



</head>

<body>
    @{
        var u = Session["use"] as Ictshop.Models.Nguoidung;
    }


    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="top_header col-md-12">


            @*@Html.Action("GioHangPartial", "GioHang",new { @style = "color:while" })*@
            @{ if (u != null && u.IDQuyen != 2)
                {
                    <div class="col-sm-4 col-md-0">
                        Xin chào : @u.Email
                        &nbsp;
                        @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                        <a style="color:red;font-size: small " href="/User/DangXuat"> ĐĂNG XUẤT</a>

                    </div> }
                else if (u != null && u.IDQuyen == 2)
                {
                    <div class="col-sm-4 col-md-0">
                        Xin chào : @u.Email
                        &nbsp;
                        @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                        <a style="color:red;font-size: small;margin-right:10px" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                        <a style="color:red;font-size: small" href="/Admin/Home"> ADMIN</a>

                    </div>
                }
                else
                {
                    <div class="col-sm-4 col-md-0">
                        <a style="color:white;font-size:medium" href="/User/Dangky"> Đăng ký</a>
                        &nbsp;
                        <a style="color: white; font-size: medium" href="/User/Dangnhap"> Đăng nhập</a>
                    </div> } }
            <div class="row">
                @*<div class="col-sm-2"><img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="20" height="20" style="padding:0" /></div>*@


                <div class="col-sm-4 col-md-0" style="padding-left:270px">
                    @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                </div>


            </div>

        </div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'><img class="navbar-brand" src="~/HinhanhSP/Shark.png" width="80" height="80" style="padding:0"></a>
                <form class="form-inline form-search" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>

            </div>
            @* start dnah mục *@
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("dtsamsungpartial", "Sanpham")" title="dienthoai">
                            <span><i class="fa-solid fa-mobile"></i></span>
                            <span>SAMSUNG</span>

                        </a>

                    </li>
                    <li>
                        <a href="@Url.Action("dtiphonepartial", "Sanpham")" title="IPhone">
                            <span><i class="fa-brands fa-apple"></i></span>
                            <span>IPHONE</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("dtxiaomipartial", "Sanpham")" title="xioami">
                            <span><i class="fa-solid fa-mobile"></i></span>
                            <span>XIAOMI</span>

                        </a>
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            <span><i class="fa-solid fa-address-book"></i></span>
                            <span>LIÊN HỆ</span>
                        </a>
                    </li>

                    <li>
                        <a title="DONHANG"
                           href="@Url.Action("Index", "DonHangs")">ĐƠN HÀNG</a>
                    </li>
                </ul>
            </div>
            @* end danh mục *@


        </div>
    </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />

        <br />
    </div>
    <br />
    <div class="bg-info" style="padding-left:50px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <h2>Bảo hành</h2>
                <span>Chính sách mua hàng</span>
                <br />
                <span>Chính sách bảo hành</span>
                <br />
                <span>Trung tâm bảo hành</span>
                <br />
                <span>Tra cứu bảo hành</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Liên kết</h2>
                <span>Tin tức Mobile</span>
                <br />
                <span>Lập trình Web</span>
                <br />
                <span>GenkVN</span>
                <br />
                <span>Dân trí</span>


            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Thông tin</h2>
                <span>Về chúng tôi</span>
                <br />
                <span>Liên hệ</span>
                <br />
                <span>Góp ý</span>
                <br />
                <span>Tra cứu</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Theo dõi</h2>
                <span>Kênh youtube</span>
                <br />
                <span>Fanpage</span>
                <br />
                <span>Shopee</span>
                <br />
                <span>Group</span>

            </div>
        </div>
        <hr />
        <center> <p class="bg-primary">&copy; @DateTime.Now - ĐTH</p></center>
    </div>

    @*#region JS TÌM KIẾM Ở TRANG  CHỦ*@
    <script>
        $(document).ready(function () {
            //Sự kiện tìm kiếm
            $(".form-search").submit(function () {
                //Lấy ra giá trị đang nhập trên input
                let key = $(".form-search input").val();
                //CHuyển trang
                window.location.href = "/SanPham/search?key=" + key;
                return false;   //tránh reaload trang khi submit
            });
        });
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
