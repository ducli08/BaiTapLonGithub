@using Ictshop.Models
@model Sanpham


@{ ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<br />
<style>
    .st-price__right {
        display: flex;
        text-align: right;
        flex-direction: column
    }

    .st-select {
        display: flex;
        background-color: #f8f9fa;
        margin-bottom: 16px;
        border-radius: 4px
    }

    .st-select__item {
        flex: 1;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        padding: 6px 0;
        transition: all .3s ease;
        border-radius: 4px;
        cursor: pointer;
        color: #444b52;
        text-decoration: none;
    }

        .st-select__item.active,
        .st-select__item:active,
        .st-select__item:focus,
        .st-select__item:hover {
            background: #edeeef;
        }

    .radio {
        display: flex;
        align-items: center;
    }

    .st-select-color {
        display: flex;
        margin-bottom: 16px px;
    }

    .st-select-color__item {
        text-align: center;
        margin-right: 18px;
        cursor: pointer;
    }

        .st-select-color__item > img {
            width: 44px;
            height: 44px;
            margin: 0 auto 4px;
            padding: 2px;
            border-radius: 4px;
            border: 1px solid transparent;
        }

        .st-select-color__item.active .img,
        .st-select-color__item:active .img,
        .st-select-color__item:focus .img,
        .st-select-color__item:hover .img {
            border: 1px solid #cb1c22;
            box-shadow: 0 0 3px 0 rgb(0 0 0 / 30%);
            position: relative;
        }

        .st-select-color__item.active p,
        .st-select-color__item:active p,
        .st-select-color__item:focus p,
        .st-select-color__item:hover p {
            font-weight: 500;
        }
</style>
<div>
    @* start header *@
    <div class="header">
        <ul class="breadcrumb" style="color: #166cf9; cursor: pointer;">
            <li class="active" id="home_menu">Home</li>
            <li id="user_managetment_menu">Sản Phẩm</li>
            <li id="add_user_menu">Chi tiết sản phẩm</li>
        </ul>
        <div class="header-details">
            <div class="col-md-6" style="font-size: 20px; font-weight: 700">
                @Model.Tensp @Model.Bonhotrong GB
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb" style="color: #166cf9; cursor: pointer; text-align: center">
                    <i class="fa-solid fa-star" style="color: #ea9e0e"></i>
                    <i class="fa-solid fa-star" style="color: #ea9e0e"></i>
                    <i class="fa-solid fa-star" style="color: #ea9e0e"></i>
                    <i class="fa-solid fa-star" style="color: #ea9e0e"></i>
                    <i class="fa-solid fa-star" style="color: #ea9e0e"></i>
                    <li class="" id="home_menu">15 đánh giá</li>
                    <li>4526 Hỏi & đáp</li>
                    <li>
                        <i class="fa-solid fa-circle-plus" style="margin-right: 1px"></i>
                        So sánh
                    </li>
                </ul>
            </div>
            <div class="col-md-12" style="border: 1px solid grey"></div>
        </div>
    </div>
    @* end header *@

    @* start container *@
    <div class="container" style="margin-top: 90px">
        <div class="col-md-6">
            <div class="container-img">
                <img src="@Url.Content("~/HinhanhSP/" +@Model.Anhbia)" class="img-responsive" alt="" width="300" height="300" />
            </div>
            <div class="container-list" style="margin-top: 15px;">
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fa-solid fa-mobile"></i>
                        6.7 inch, OLED, Super Retina XDR, 2778 x 1284 Pixels
                    </li>
                    <li class="list-group-item">
                        <i class="fa-solid fa-camera"></i>
                        12.0 MP + 12.0 MP + 12.0 MP
                    </li>
                    <li class="list-group-item">
                        <i class="fa-solid fa-hard-drive"></i>
                        Apple A15 Bionic
                    </li>
                    <li class="list-group-item">
                        <i class="fa-solid fa-hard-drive"></i>
                        128GB
                    </li>
                </ul>
            </div>
            <div class="container-policy" style="display: flex;">
                <div class="policy-item" style="display: inline-flex">
                    <span><img src="~/HinhanhSP/icon_policy.png" /></span>
                    <p>Hàng chính hãng - bảo hành 12 Tháng</p>
                </div>
                <div class="policy-item" style="display: inline-flex">
                    <span style="margin-left: 5px"><i class="fa-solid fa-truck" style="color: #cb1c22;"></i></span>
                    <p>Giao hàng toàn quốc.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="st-price" style="display: flex">
                <div class="st-price__left" style="display: inline-flex; flex: 1">
                    <div class="st-price__current" style="color: #cb1c22; font-size: 35px; font-weight: 700">@String.Format("{0:0,0}", Model.Giatien) VNĐ</div>
                    <div class="st-price__old" style="color: #9da2aa; text-decoration: line-through; font-size: 20px; margin: 10px 0 0 5px">
                        33.990.000₫
                    </div>
                </div>
                <div class="st-price__right">
                    <span>Trả góp chỉ từ&nbsp;</span>
                    <span>
                        <strong>2.155.500₫</strong>
                        /tháng
                    </span>
                </div>
            </div>
            <div class="st-select">
                <a class="st-select__item active">
                    <div class="radio">
                        <input type="radio" name="gp" id="gp-36692" value="128gb" checked="" style="pointer-events: none;">
                        128GB
                    </div>
                    <p>29.990.000đ</p>
                </a>
                <a class="st-select__item active">
                    <div class="radio">
                        <input type="radio" name="gp" id="gp-36692" value="256gb" checked="" style="pointer-events: none;">
                        256GB
                    </div>
                    <p>29.990.000đ</p>
                </a>
                <a class="st-select__item active">
                    <div class="radio">
                        <input type="radio" name="gp" id="gp-36692" value="512gb" checked="" style="pointer-events: none;">
                        512GB
                    </div>
                    <p>29.990.000đ</p>
                </a>
                <a class="st-select__item active">
                    <div class="radio">
                        <input type="radio" name="gp" id="gp-36692" value="1TB" checked="" style="pointer-events: none;">
                        1TB
                    </div>
                    <p>29.990.000đ</p>
                </a>
            </div>

            <div class="st-select-color">
                <div class="st-select-color__item active">
                    <div class="img">
                        <img src="https://images.fpt.shop/unsafe/fit-in/40x40/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2021/9/15/637673217820889289_iphone-13-pro-max-vang-1.jpg" />
                        <p>Vàng</p>
                    </div>
                </div>
                <div class="st-select-color__item active">
                    <div class="img">
                        <img src="https://images.fpt.shop/unsafe/fit-in/40x40/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2021/9/15/637673217819795830_iphone-13-pro-max-xam-1.jpg" />
                        <p>Xám</p>
                    </div>
                </div>
                <div class="st-select-color__item active">
                    <div class="img">
                        <img src="https://images.fpt.shop/unsafe/fit-in/40x40/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2021/9/15/637673217819171028_iphone-13-pro-max-bac-1.jpg" />
                        <p>Bạc</p>
                    </div>
                </div>
                <div class="st-select-color__item active">
                    <div class="img">
                        <img src="https://images.fpt.shop/unsafe/fit-in/40x40/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2021/9/15/637673217826201634_iphone-13-pro-max-xanh-1.jpg" />
                        <p>Xanh</p>
                    </div>
                </div>
                <div class="st-select-color__item active">
                    <div class="img">
                        <img src="https://images.fpt.shop/unsafe/fit-in/40x40/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2022/3/28/637840956036926900_iphone-13-pro-max-xanhreu-1.jpg" />
                        <p>Xanh lá</p>
                    </div>
                </div>
            </div>

            <div class="st-select-promotion" style=" margin-top: 15px;">
                <span style="color: #555; font-weight: bold; font-size: 20px">Ưu đãi thêm</span>
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fa-solid fa-circle-check"></i>
                        Bảo hành 2 năm chính hãng
                    </li>
                    <li class="list-group-item">
                        <i class="fa-solid fa-circle-check"></i>
                        Tặng PMH 300.000đ mua Ốp lưng chính hãng
                    </li>
                    <li class="list-group-item">
                        <i class="fa-solid fa-circle-check"></i>
                        Tặng PMH 165.000đ mua eSim Mobifone Big Data
                    </li>
                </ul>
            </div>

            <div class="st-buy">
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                {
                    <button class="btn btn-success" id="bgnGioHang">
                        Mua hàng
                    </button>
                }

            </div>
        </div>
    </div>

</div>





